<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.26.xsd">

    <changeSet id="001-create-price" author="you">
        <createTable tableName="price">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(12,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="price_type" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>

<!--        <createIndex tableName="price" indexName="idx_price_currency_type">-->
<!--            <column name="currency"/>-->
<!--            <column name="price_type"/>-->
<!--        </createIndex>-->
    </changeSet>

</databaseChangeLog>